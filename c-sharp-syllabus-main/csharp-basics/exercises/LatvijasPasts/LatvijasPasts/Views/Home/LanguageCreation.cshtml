@model LatvijasPasts.Models.LanguageDataModel

@{
    ViewData["Title"] = "LanguageCreation";
}

<h1>LanguageCreation</h1>

<h4>LanguageDataModel</h4>
<hr/>

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-md-4">
        <form asp-action="LanguageCreation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control"/>
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" name="button" value="add">Add</button>
            </div>
            <div class="form-group">
                <button type="submit" name="button" value="continue">Continue</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}